{
  "name": "news_scrape",
  "version": "1.0.0",
  "description": "news_scrape",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seanmrudd/News_Scrape.git"
  },
  "author": "Sean Rudd",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/seanmrudd/News_Scrape/issues"
  },
  "homepage": "https://github.com/seanmrudd/News_Scrape#readme",
  "dependencies": {
    "axios": "^0.19.0",
    "cheerio": "^1.0.0-rc.3",
    "express": "^4.17.1",
    "express-handlebars": "^3.1.0",
    "mongoose": "^5.6.4",
    "morgan": "^1.9.1",
    "if-env": "^1.0.4"
  }
}